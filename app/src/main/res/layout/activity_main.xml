<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:onClick="hideKeyboard">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top |center"
            android:layout_marginTop="150dp"
            android:background="#f59332">

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="Turtle Ship" />

                <EditText
                    android:id="@+id/email_phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/text"
                    android:background="@layout/border_edittext"
                    android:hint="@string/hint_signin"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/email_phone"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_edittext"
                    android:hint="@string/hint_pass"
                    android:password="true"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_btn"
                    android:text="Đăng nhập"
                    android:textColor="@android:color/background_light"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_fogot_pass"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/btn_sign_in"
                    android:layout_marginBottom="15dp"
                    android:background="@layout/border_btn"
                    android:text="Quên Mật khẩu"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/btn_sign_in"
                    android:layout_marginBottom="15dp"
                    android:background="@layout/border_btn"
                    android:text="Đăng ký"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </FrameLayout>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>