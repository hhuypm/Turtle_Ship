<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logo2"
        android:onClick="hideKeyboard">

        <LinearLayout
            android:layout_marginTop="250dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="230dp"
            android:background="@drawable/login">


            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="230dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <EditText
                    android:id="@+id/email_phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/text"
                    android:layout_marginTop="20dp"
                    android:background="@layout/border_edittext"
                    android:drawableRight="@drawable/ic_person_outline_black_24dp"
                    android:hint="@string/hint_signin"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/email_phone"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_edittext"
                    android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                    android:hint="@string/hint_pass"
                    android:paddingLeft="10dp"
                    android:password="true"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/password"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@layout/border_btn"
                    android:text="Đăng nhập"
                    android:textColor="@android:color/background_light"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:backgroundTint="#133f7e"
                    android:id="@+id/btn_face"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/password"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@layout/border_btn"
                    android:text="FaceBook"
                    android:textColor="@android:color/background_light"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_fogot_pass"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/btn_sign_in"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="15dp"
                    android:background="@layout/border_btn"
                    android:text="Quên Mật khẩu"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/btn_sign_in"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="15dp"
                    android:background="@layout/border_btn"
                    android:text="Đăng ký"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>