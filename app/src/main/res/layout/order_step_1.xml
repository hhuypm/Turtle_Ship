<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:id="@+id/thongtinnguoigui"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_alignParentTop="true"
            android:background="#79a4ef">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.Thông tin người gửi"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_name_sent"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="37dp"
                android:text="TextView"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spn_sent_list_add"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="17dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="165dp"
            android:background="#79a4ef">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:ems="10"
                android:hint="Số điện thoại người nhận"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.Thông tin người nhận"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText2"
                android:ems="10"
                android:hint="Tên người nhận"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="135dp"
                android:layout_marginEnd="25dp"
                android:text="Thành phố" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginBottom="94dp"
                android:text="Quận" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginBottom="57dp"
                android:text="Phường" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText4"
                android:layout_alignStart="@+id/textView5"
                android:text="Địa chỉ" />

            <Spinner
                android:id="@+id/spn_state_receive"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView7"
                android:layout_toStartOf="@+id/textView5" />

            <Spinner
                android:id="@+id/spn_district_receive"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView6"
                android:layout_toStartOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/textView5"
                android:text="Tp. Hồ Chí Minh" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="11dp"
                android:layout_toStartOf="@+id/textView5"
                android:inputType="textPersonName"
                android:text="Name"
                android:textSize="13dp" />

        </RelativeLayout>


    </FrameLayout>

    <Button
        android:id="@+id/btn_next_step_2"
        android:layout_width="107dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="20dp"
        android:background="@layout/border_btn"
        android:text="Tiếp theo"
        android:textSize="12dp" />


</RelativeLayout>