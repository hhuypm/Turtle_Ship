<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/thongtinnguoigui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.Thông tin người gửi"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_name_sent"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:text="Minh Huy"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/tv_phone_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_sent"
            android:text="Số điện thoại: "
            android:layout_marginLeft="5dp"
            android:textSize="15dp" />
        <Spinner
            android:id="@+id/spn_sent_list_add"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_phone_sent"
            android:layout_marginBottom="17dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp">
            <TextView
                android:textColor="#ffff"
                android:text="2.Thông tin người nhận"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>
            <EditText
                android:layout_marginTop="25dp"
                android:textColor="#ffff"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại người nhận"/>
            <Button
                android:textSize="15dp"
                android:text="Lịch sử"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="15dp"
                android:hint="Tên người nhận"
                android:layout_marginTop="60dp"
                android:layout_width="176dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:text="TP.Hồ Chí Minh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="115dp"
                android:layout_marginLeft="220dp"
                android:textSize="20dp"
                android:text="Thành phố"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp">
            </Spinner>
            <TextView
                android:layout_marginTop="160dp"
                android:textSize="20dp"
                android:layout_marginLeft="222dp"
                android:text="Quận"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp">
            </Spinner>
            <TextView
                android:layout_marginTop="205dp"
                android:layout_marginLeft="220dp"
                android:textSize="20dp"
                android:text="Phường"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginTop="240dp"
                android:hint="Số nhà"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="220dp"
                android:text="Địa chỉ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Button
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Trở về"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="270dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp theo"/>
        <TextView
            android:layout_gravity="center"
            android:text="1/3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>