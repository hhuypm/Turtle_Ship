<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainContent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#79a4ef">

            <CheckBox
                android:id="@+id/cb_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button7"
                android:layout_alignTop="@+id/cb_receive"
                android:checked="true"
                android:onClick="onCheckboxClicked"
                android:text="Người gửi trả phí" />

            <CheckBox
                android:id="@+id/cb_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="57dp"
                android:onClick="onCheckboxClicked"
                android:text="Người nhận trả phí" />

            <EditText
                android:id="@+id/et_mota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="184dp"
                android:ems="10"
                android:hint="Mô tả hàng hóa"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_dinhgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="239dp"
                android:ems="10"
                android:hint="VD:20000VND"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_KhoiLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/et_dinhgia"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:ems="10"
                android:hint="VD: 20Kg"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/et_soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/et_KhoiLuong"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_dinhgia"
                android:layout_toEndOf="@+id/et_dinhgia"
                android:text="Định giá hàng hóa"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_KhoiLuong"
                android:layout_toEndOf="@+id/et_KhoiLuong"
                android:text="Khối Lượng"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_soluong"
                android:layout_toEndOf="@+id/et_soluong"
                android:text="Số Lượng"
                android:textSize="18sp"/>


            <Button
                android:id="@+id/btn_next_step_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@layout/border_btn"
                android:text="Tiếp theo" />

            <Button
                android:id="@+id/btn_back_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="10dp"
                android:background="@layout/border_btn"
                android:text="Trở về" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn_next_step_3"
                android:layout_centerHorizontal="true"
                android:text="2/3" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:text="3.Hình thức thanh toán"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="4.Thông tin hàng hóa"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </RelativeLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>