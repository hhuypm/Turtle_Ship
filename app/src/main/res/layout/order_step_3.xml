<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#79a4ef"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_name_sent_step_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_5_xacnhan"
            android:paddingLeft="15dp"
            android:text="Người gửi"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/vt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_diachi_receive"
            android:paddingLeft="15dp"
            android:text="Thông tin hàng"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_name_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_diachi_sent"
            android:paddingLeft="15dp"
            android:text="Người nhận"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_5_xacnhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Xác nhận đơn hàng"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/vt_thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_info_dinhgia"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Thanh toán"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_accept_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@layout/border_btn"
            android:text="Xác nhận" />

        <Button
            android:id="@+id/btn_back_step_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="10dp"
            android:background="@layout/border_btn"
            android:text="Trở về" />

        <TextView
            android:id="@+id/step_3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_accept_order"
            android:layout_centerHorizontal="true"
            android:text="3/3" />

        <TextView
            android:id="@+id/tv_diachi_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sdt_sent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_sdt_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_sent_step_3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_sdt_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_receive"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_diachi_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_sdt_receive"
            android:text="TextView" />

        <TextView
            android:id="@+id/vt_info_mota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vt_info"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/vt_info_kl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vt_info_mota"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/vt_info_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/vt_info_kl"
            android:layout_marginEnd="134dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_info_hinhthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/vt_info_sl"
            android:layout_alignTop="@+id/tv_info_dinhgia"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_info_dinhgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vt_info_kl"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/vt_phi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/vt_info_sl"
            android:layout_alignTop="@+id/vt_quangduong"
            android:text="Phí chuyển" />

        <TextView
            android:id="@+id/vt_quangduong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vt_thanhtoan"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="Quãng đường" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>