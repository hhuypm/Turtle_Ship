<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huypm.turtle_ship.RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:onClick="hideKeyboard">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#f59332">

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="Turtle Ship" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/text"
                    android:background="@layout/border_edittext"
                    android:hint="Họ tên"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_mail"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/et_name"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_edittext"
                    android:hint="Email"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/et_mail"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_edittext"
                    android:hint="@string/hint_pass"
                    android:password="true"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/et_reenter_pass"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/et_pass"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_edittext"
                    android:hint="Nhập lại mật khẩu"
                    android:password="true"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/et_reenter_pass"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_edittext"
                    android:hint="Số điện thoại"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/spn_district"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_spiner"
                    android:layout_below="@+id/et_phone"></Spinner>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/spn_state"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_spiner"
                    android:layout_below="@+id/spn_district"></Spinner>
                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/spn_state"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_edittext"
                    android:hint="Địa chỉ"
                    android:password="true"
                    android:paddingLeft="10dp"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/et_address"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_btn"
                    android:text="Trở lại"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_accept_register"
                    android:layout_width="135dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_address"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@layout/border_btn"
                    android:text="Đăng ký"
                    android:textColor="@android:color/background_light"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </FrameLayout>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>